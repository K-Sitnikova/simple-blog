html {
    font-size: 16px;
}
html,
body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    background-color: #68c7d5f5;
    font-family: OffBit, sans-serif;
    color: #1c32dd;
}
.app {
    &__index {
        height: 100vh;
        display: grid;
        grid-template-rows: auto 1fr auto;
        padding: 0 65px;
        max-width: 1400px;
        margin: 0 auto;
    }
}

ul,
li {
    margin: 0;
    padding: 0;
}

li {
    list-style-type: none;
}